<div class="flex items-center justify-center bg-gray-100">
  <div class="max-w-md w-full p-8 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold mb-6 text-gray-900">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-600" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block text-sm font-medium text-gray-600" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-2 w-full border rounded-md" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center">
          <%= f.check_box :remember_me, class: "rounded border-gray-300 text-indigo-600 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "w-full mt-4 px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>